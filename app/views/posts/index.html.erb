<% if current_user %>
<h1><%= current_user.username %></h1>
<%= button_to "logout", destroy_user_session_path, method: :delete %>
<% else %>
<h1>You Should Sign In</h1>
<%= button_to "Sign Up", new_user_registration_path %>
<%= button_to "Sign In", new_user_session_path %>
<% end %>

<h2>Posts:</h2>
<% @posts.each do |post| %>
Author:<% if user_signed_in? %> 
<%= post.user.username %>
<% else %>
<p>Log in to see the author!</p>
<% end %>
<h5><%= link_to post.title, post %></h5>
<%= post.body %> <br>
<% end %>


